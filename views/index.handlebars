<h1>Eat-Da-Burger!</h1>

<ol>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">Devour it!</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}
</ol>

<ol>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			</li>
		{{/if}}
	{{/each}}
</ol>

<form class="create-update-form" action="/" method="POST">
	
	<div class="form-group">
		<input type="text" id="newBurger" name="burger_name">
	</div>

	<button type="submit">Submit</button>
</form>